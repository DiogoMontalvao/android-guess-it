<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="normalText">
        <item name="android:layout_margin">@dimen/general_margin</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mainText">
        <item name="android:layout_margin">@dimen/general_margin</item>
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="button">
        <item name="android:layout_margin">32dp</item>
        <item name="android:backgroundTint">@color/mainColor</item>
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
    </style>
</resources>